{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "system",
    "target": "es2022",
    "rootDirs": ["src/", "specs/"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "dist"
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/node_modules/**/*",
    "node_modules/**/*"
  ]
}
