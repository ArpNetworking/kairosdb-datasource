{
  "compilerOptions": {
    "module": "system",
    "moduleResolution": "node",
    "target": "es2022",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/node_modules/**/*",
    "node_modules/**/*"
  ]
}
