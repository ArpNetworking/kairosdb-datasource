{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "module": "system",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "noImplicitAny": false
  },
  "exclude": ["dist", "specs"]
}
